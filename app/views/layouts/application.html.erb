<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Aether Forge" %></title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%# <meta name="turbo-visit-control" content="reload"> %>
    <meta name="turbo-root" content="/">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield :page_js %>
    <% if user_signed_in? %>
      <meta name="jwt-token" content="<%= JsonWebToken.encode(user_id: current_actor.id) %>">
    <% end %>
    <!-- application module will import Turbo + Stimulus controllers -->
  </head>

  <body class="">
    <div id="page-container" class="container mx-auto p-4 h-screen overflow-hidden bg-white">
    <% if user_signed_in? %>
      <div class="flex gap-6 h-full overflow-hidden" data-controller="sidebar">
        <aside id="sidebar"
               role="dialog"
               aria-modal="true"
               aria-label="Main sidebar"
               aria-hidden="true"
               class="fixed inset-y-0 left-0 z-40 w-64 transform -translate-x-full overflow-y-auto md:static md:h-full md:translate-x-0 md:block transition-transform duration-200 ease-in-out">
                <% if content_for?(:sidebar) %>
                  <%= yield :sidebar %>
                <% else %>
                  <%= render partial: 'game/sidebar' %>
                <% end %>

                <!-- close button visible on mobile -->
                <button data-action="click->sidebar#close" class="md:hidden absolute top-3 right-3 p-1 rounded bg-gray-100" aria-label="Close sidebar">✕</button>
        </aside>

        <!-- backdrop for mobile sidebar -->
        <div id="sidebar-backdrop" data-sidebar-target="backdrop" data-action="click->sidebar#close" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40"></div>

        <main id="main-scroll" class="flex-1 h-full overflow-y-auto">
          <div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2"></div>
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-3">
              <button id="sidebar-toggle" data-action="click->sidebar#toggle" class="md:hidden inline-flex items-center justify-center p-2 rounded bg-gray-100 hover:bg-gray-200">
                <span class="sr-only">Open sidebar</span>
                ☰
              </button>

              <% if content_for?(:header) %>
                <%= yield :header %>
              <% else %>
                <h1 class="text-2xl font-bold">Aetherium Ascent</h1>
              <% end %>
            </div>

            <div>
              <% if content_for?(:header_actions) %>
                <%= yield :header_actions %>
              <% else %>
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete %>
              <% end %>
            </div>
          </div>

          <% if user_signed_in? && impersonating? && impersonated_user.present? %>
            <div class="mb-3 rounded border border-red-300 bg-red-50 p-3 text-sm text-red-900 flex items-center justify-between">
              <div>
                Viewing as <strong><%= impersonated_user.email %></strong> (view-only)
              </div>
              <div>
                <%= button_to "Stop", stop_owner_impersonations_path, method: :post, class: "px-2 py-1 rounded bg-red-600 text-white text-xs", data: { controller: 'confirm', confirmMessageValue: 'Stop impersonation?', action: 'click->confirm#intercept' } %>
              </div>
            </div>
          <% end %>

          <% if user_signed_in? && current_announcement.present? && !turbo_frame_request? %>
            <div class="mb-3 rounded border border-yellow-200 bg-yellow-50 p-3 text-sm text-yellow-900">
              <strong><%= current_announcement.title %></strong>
              <% if current_announcement.body.present? %>
                <div class="mt-1 whitespace-pre-wrap"><%= current_announcement.body %></div>
              <% end %>
            </div>
          <% end %>

          <% if turbo_frame_request? %>
            <%= yield %>
          <% else %>
            <turbo-frame id="main">
              <%= yield %>
            </turbo-frame>
          <% end %>
        </main>
      </div>
    <% else %>
      <main class="max-w-md mx-auto py-8">
        <%= yield %>
      </main>
    <% end %>
    </div>

    <!-- Persistent Event Log (bottom panel) -->
    <div id="event-log" class="fixed bottom-0 inset-x-0 z-50 border-t border-gray-200 bg-white shadow-[0_-4px_12px_rgba(0,0,0,0.08)]">
      <div class="container mx-auto">
        <div class="px-4 py-2 text-xs text-gray-600 flex items-center gap-3 bg-white border-b border-gray-200">
          <span>Event Log</span>
          <label class="inline-flex items-center gap-1">
            <span>Level</span>
            <select id="event-filter-level" class="border border-gray-300 rounded text-xs px-1 py-0.5">
              <option value="">All</option>
              <option value="debug">Debug</option>
              <option value="info" selected>Info</option>
              <option value="warning">Warning</option>
              <option value="error">Error</option>
              <option value="critical">Critical</option>
            </select>
          </label>
          <label class="inline-flex items-center gap-1">
            <span>Since (hrs)</span>
            <input id="event-filter-hours" type="number" min="1" max="168" value="24" class="w-16 border border-gray-300 rounded text-xs px-1 py-0.5" />
          </label>
          <label class="inline-flex items-center gap-1 ml-auto">
            <input id="event-pause" type="checkbox" class="align-middle" />
            <span>Pause auto-scroll</span>
          </label>
          <button id="event-clear" class="text-xs px-2 py-0.5 rounded border border-gray-300">Clear</button>
          <button id="event-apply" class="text-xs px-2 py-0.5 rounded bg-gray-800 text-white">Apply</button>
        </div>
        <div id="event-log-list" class="px-4 pb-3 max-h-44 overflow-y-auto space-y-1 bg-white"></div>
      </div>
    </div>
  </body>

  <!-- Sidebar behavior is handled by Stimulus controller: app/javascript/controllers/sidebar_controller.js -->
</html>
