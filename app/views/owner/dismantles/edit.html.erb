<%= main_frame do %>
  <div class="space-y-4">
    <div class="flex items-center justify-between">
      <h2 class="text-xl font-semibold">Edit Dismantle: <%= Item.find_by(id: @rule.subject_id)&.name %></h2>
      <%= link_to "Back", owner_dismantles_path, class: "text-sm text-blue-600 hover:underline" %>
    </div>

    <%= form_with url: owner_dismantle_path(@rule), method: :put, data: { controller: 'validate-form confirm', action: 'submit->validate-form#intercept submit->confirm#intercept', confirmMessageValue: 'Update dismantle?' } do %>
      <%= render 'owner/shared/validation_banner', errors: @validation_errors, success_message: @validation_success_message if defined?(@validation_errors) || defined?(@validation_success_message) %>
      <div class="mb-4">
        <label class="block text-sm font-medium">Notes</label>
        <%= text_area_tag 'dismantle_rule[notes]', @rule.notes, rows: 3, class: 'mt-1 w-full border rounded px-2 py-1' %>
      </div>

      <h3 class="text-lg font-medium mb-2">Yields</h3>
      <p class="text-xs text-gray-500 mb-2">Enter Resource or Item names exactly as defined.</p>
      <div data-controller="form-list" data-form-list-target="container">
        <% @rule.dismantle_yields.each_with_index do |y, i| %>
          <div class="border rounded p-2 mb-2" data-form-list-row>
            <div class="grid grid-cols-1 md:grid-cols-6 gap-2 items-end">
              <div>
                <label class="block text-xs text-gray-600">Type</label>
                <select name="yields[<%= i %>][type]" class="border rounded px-2 py-1 text-sm">
                  <option <%= 'selected' if y.component_type == 'Resource' %>>Resource</option>
                  <option <%= 'selected' if y.component_type == 'Item' %>>Item</option>
                </select>
              </div>
              <div>
                <label class="block text-xs text-gray-600">Name</label>
                <input type="text" name="yields[<%= i %>][name]" value="<%= y.component_type == 'Resource' ? Resource.find_by(id: y.component_id)&.name : Item.find_by(id: y.component_id)&.name %>" class="border rounded px-2 py-1 text-sm" data-controller="typeahead validate-ref" data-typeahead-type-selector-value="select[name='yields[<%= i %>][type]']" data-validate-ref-type-selector-value="select[name='yields[<%= i %>][type]']" data-validate-ref-message-value="Unknown component" />
              </div>
              <div>
                <label class="block text-xs text-gray-600">Quantity</label>
                <input type="number" name="yields[<%= i %>][quantity]" value="<%= y.quantity %>" class="border rounded px-2 py-1 text-sm" />
              </div>
              <div>
                <label class="block text-xs text-gray-600">Salvage Rate</label>
                <input type="number" step="0.01" name="yields[<%= i %>][salvage_rate]" value="<%= y.salvage_rate %>" class="border rounded px-2 py-1 text-sm" />
              </div>
              <div>
                <label class="block text-xs text-gray-600">Quality</label>
                <input type="text" name="yields[<%= i %>][quality]" value="<%= y.quality %>" class="border rounded px-2 py-1 text-sm" />
              </div>
              <div>
                <button class="px-2 py-1 rounded border text-xs" data-action="form-list#remove">Remove</button>
              </div>
            </div>
          </div>
        <% end %>
        <template data-form-list-target="template">
          <div class="border rounded p-2 mb-2" data-form-list-row>
            <div class="grid grid-cols-1 md:grid-cols-6 gap-2 items-end">
              <div>
                <label class="block text-xs text-gray-600">Type</label>
                <select name="yields[__INDEX__][type]" class="border rounded px-2 py-1 text-sm">
                  <option>Resource</option>
                  <option>Item</option>
                </select>
              </div>
              <div>
                <label class="block text-xs text-gray-600">Name</label>
                <input type="text" name="yields[__INDEX__][name]" class="border rounded px-2 py-1 text-sm" data-controller="typeahead validate-ref" data-typeahead-type-selector-value="select[name='yields[__INDEX__][type]']" data-validate-ref-type-selector-value="select[name='yields[__INDEX__][type]']" data-validate-ref-message-value="Unknown component" />
              </div>
              <div>
                <label class="block text-xs text-gray-600">Quantity</label>
                <input type="number" name="yields[__INDEX__][quantity]" value="1" class="border rounded px-2 py-1 text-sm" />
              </div>
              <div>
                <label class="block text-xs text-gray-600">Salvage Rate</label>
                <input type="number" step="0.01" name="yields[__INDEX__][salvage_rate]" value="1.0" class="border rounded px-2 py-1 text-sm" />
              </div>
              <div>
                <label class="block text-xs text-gray-600">Quality</label>
                <input type="text" name="yields[__INDEX__][quality]" class="border rounded px-2 py-1 text-sm" />
              </div>
              <div>
                <button class="px-2 py-1 rounded border text-xs" data-action="form-list#remove">Remove</button>
              </div>
            </div>
          </div>
        </template>
        <button class="px-3 py-2 rounded border text-sm" data-action="form-list#add">Add Yield</button>
      </div>

      <div class="mt-4 flex items-center gap-2">
        <%= submit_tag 'Save', class: 'px-3 py-2 rounded bg-gray-800 text-white' %>
        <%= button_tag 'Validate All', type: 'submit', formmethod: 'post', formaction: owner_validate_dismantle_path(@rule), class: 'px-3 py-2 rounded border' %>
      </div>
    <% end %>
  </div>
<% end %>
