<%# Renders validation result banner: green on success, red list on errors %>
<% errs = Array(local_assigns[:errors]).compact %>
<% success = local_assigns[:success_message] %>
<% if errs.present? %>
  <div class="rounded border border-red-200 bg-red-50 p-3 text-sm text-red-800">
    <div class="font-semibold mb-1">Validation Issues</div>
    <ul class="list-disc pl-5 space-y-0.5">
      <% errs.each do |err| %>
        <li><%= err %></li>
      <% end %>
    </ul>
  </div>
<% elsif success.present? %>
  <div class="rounded border border-green-200 bg-green-50 p-3 text-sm text-green-800">
    <%= success %>
  </div>
<% end %>

