<div class="flex h-full flex-col justify-between border-e border-gray-100 bg-white">
  <div class="px-4 py-6">
    <span class="grid h-10 w-32 place-content-center rounded-lg bg-gray-100 text-xs text-gray-600">
      AetherForge
    </span>

    <nav class="mt-6 space-y-1">
      <%= link_to "Home (Actions)", root_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
      <%= link_to "Inventory", inventory_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
      <%= link_to "Skills", skills_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
      <%= link_to "Buildings", buildings_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
      <% if current_actor&.owner? %>
        <div class="mt-4">
          <span class="block text-xs uppercase text-gray-500 px-4">Owner</span>
          <div class="mt-1 space-y-1">
            <%= link_to "Dashboard", owner_dashboard_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-white bg-gray-800 hover:bg-gray-700" %>
            <%= link_to "Users", owner_users_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Announcements", owner_announcements_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Audit Logs", owner_audit_logs_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Suspension Templates", owner_suspension_templates_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>
            <%= link_to "Validate & Export", owner_seeds_path, data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded-lg px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100" %>

            <details class="px-1" data-controller="accordion">
              <summary class="cursor-pointer list-none rounded-lg px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100">Content</summary>
              <div class="mt-1 ml-2 space-y-1">
                <%= link_to "Actions", owner_content_index_path(resource: 'actions'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Resources", owner_content_index_path(resource: 'resources'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Items", owner_content_index_path(resource: 'items'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Skills", owner_content_index_path(resource: 'skills'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Buildings", owner_content_index_path(resource: 'buildings'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Recipes", owner_content_index_path(resource: 'recipes'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Flags", owner_content_index_path(resource: 'flags'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Effects", owner_content_index_path(resource: 'effects'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Dismantle", owner_content_index_path(resource: 'dismantle'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Action Item Drops", owner_content_index_path(resource: 'action_item_drops'), data: { turbo_frame: 'main', turbo_action: 'advance' }, class: "block rounded px-3 py-1.5 text-sm text-gray-700 hover:bg-gray-100" %>
              </div>
            </details>
          </div>
        </div>
      <% end %>
    </nav>
  </div>

  <div class="mt-auto border-t border-gray-100">
    <div class="flex items-center gap-2 bg-white p-4">
      <div>
        <p class="text-xs">
          <strong class="block font-medium"><%= current_user.email %></strong>
        </p>
      </div>
    </div>
  </div>
</div>
