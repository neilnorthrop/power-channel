<%= main_frame do %>
  <!-- page content (layout provides header and header actions by default) -->

  <!-- Toast container is provided in application layout -->

  <section class="mb-6" aria-label="Your Stats">
    <h2 class="text-xl font-semibold mb-3">Your Stats</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="rounded-md border border-gray-200 bg-white shadow-sm p-4">
        <div class="text-sm text-gray-600">Level</div>
        <div id="level" class="text-2xl font-semibold text-gray-900"></div>
      </div>
      <div class="rounded-md border border-gray-200 bg-white shadow-sm p-4">
        <div class="text-sm text-gray-600">Experience</div>
        <div id="experience" class="text-2xl font-semibold text-gray-900"></div>
      </div>
      <div class="rounded-md border border-gray-200 bg-white shadow-sm p-4">
        <div class="text-sm text-gray-600">Skill Points</div>
        <div id="skill-points" class="text-2xl font-semibold text-gray-900"></div>
      </div>
    </div>
  </section>

  <h2 class="text-xl font-semibold mt-6 mb-3">Actions</h2>
  <div id="actions" class="space-y-3"></div>
<% end %>
